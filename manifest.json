{
    "manifest_version": 3,
    "name": "Hard-working JS",
    "description": "Chrome extension - Block all distracting websites.",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "128": "assets/icon-128.png",
        "48": "assets/icon-48.png",
        "32": "assets/icon-32.png",
        "16": "assets/icon-16.png"
    },
    "permissions": [
        "storage",
        "notifications",
        "webRequest",
        "alarms"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}